<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="blog-text">
      <p class="left"><strong>タイトル</strong></p>
      <p class="left"><%= @facebook.title %></p>
      <p class="left"><strong>内容</strong></p>
      <p class="left"><%= @facebook.content %></p>
      <p class="left"><strong>画像</strong></p>
      <p class="left"><%= image_tag(@facebook.image) %></p>
      <p class="right">
        <strong>作成時間:</strong>
        <%= @facebook.created_at.strftime("%y/%m/%d %p %l:%M") %>
      </p>
    </div>
    <p>コメント一覧</p>
    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, facebook: @facebook } %>
    </div>
    <%= render partial: 'comments/form', locals: { comment: @comment, facebook: @facebook } %>
    <% if current_user.id == @facebook.user_id %>
      <%= link_to '編集', edit_facebook_path(@facebook) %> |
    <% end %>
    <%= link_to '戻る', facebooks_path %>
  </div>
</div>
