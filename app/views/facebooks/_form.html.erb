<%= form_for(@facebook, url: choose_new_or_edit) do |f| %>

  <% if @facebook.errors.any? %>
    <div id="error_explanation">
      <h2><%= @facebook.errors.count %>件のエラーがあります。</h2>

        <ul>
          <% @facebook.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control'  %>
  <br>
  <%= f.label :内容 %>
  <%= f.text_field :content, class: 'form-control'  %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "一覧画面にもどる", facebooks_path, class: 'btn btn-default btn-block' %>
